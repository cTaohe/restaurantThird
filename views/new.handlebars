<h1 class="mb-1 restaurant-show-title">新增餐廳</h1>
<div class="container">
  <form action="/restaurants" method="POST">
    <!-- 餐廳名稱、categor -->
    <div class="form-group row">
      <label class="col-xs-12 col-sm-6">
        餐廳中文名稱:
        <input type="text" class="form-control" name="name" placeholder="中文名稱" required>
      </label>
      <label class="col-xs-12 col-sm-6">
        餐廳英文名稱:
        <input type="text" class="form-control" name="name_en" placeholder="English Name" required>
      </label>
    </div>
    <!-- location、phon、rating -->
    <div class="form-group row">
      <label class="col-xs-12 col-sm-6">
        類別:
        <input type="text" class="form-control" name="category" placeholder="美式" required>
      </label>
      <label class="col-xs-12 col-sm-6">
        電話:
        <input type="text" class="form-control" name="phone" pattern="\d{2}\s{1}\d{4}\s{1}\d{4}" placeholder="02 0000 0000" required>
      </label>
    </div>
    <div class="form-group row">
      <label class="col">
        地址:
        <input type="text" class="form-control" name="location" placeholder="地址" required>
      </label>
    </div>
    <div class="form-group row">
      <label class="col">
        Google Map:
        <input type="text" class="form-control" name="google_map"
        pattern="(http|https):\/\/([\w.]+\/?)\S*" placeholder="以 https:// 開頭" required>
      </label>
    </div>
    <!-- image、google_map、description -->
    <div class="form-group row">
      <label class="col-xs-12 col-sm-6">
        評分:
        <input type="number" class="form-control" name="rating" placeholder="1-5" min="0" max="5" step="0.1" required>
      </label>
      <label class="col-xs-12 col-sm-6">
        圖片:
        <input type="url" class="form-control" name="image" pattern="(http|https):\/\/([\w.]+\/?)\S*" placeholder="以 https:// 開頭" required>    
      </label>
    </div>
    <div class="form-group">
      <label>描述</label>
      <textarea class="form-control" name="description" placeholder="description" required></textarea>
    </div>
    <div class="form-group text-center">
      <button type="submit" class="btn btn-primary mr-2">新增確認</button>
      <a href="/" class="btn btn-info">取消</a>
    </div>
  </form>
</div>